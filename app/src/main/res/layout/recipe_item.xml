<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    >

        <ImageView
            android:id="@+id/image_view_recipe_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@id/image_view_recipe_image"
            android:background="@drawable/recipe_item_bottom_gradient"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/image_view_recipe_image"
        android:layout_alignBottom="@id/image_view_recipe_image">
        <TextView
            android:id="@+id/text_view_recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:text="Lazanja"
            android:layout_centerVertical="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/lightGrey"
            android:textStyle="italic" />


        <LinearLayout
            android:id="@+id/layout_ingredient_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="5dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ingredient"
                android:tint="@color/lightGrey"
                />
            <TextView
                android:id="@+id/text_view_recipe_ingredients_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="5"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_step_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/layout_ingredient_number"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/preparation_step"
                android:tint="@color/lightGrey" />

            <TextView
                android:id="@+id/text_view_recipe_steps_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="7"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/layout_step_number"
            android:layout_centerVertical="true"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_access_time_white_24dp"
                android:tint="@color/lightGrey" />

            <TextView
                android:id="@+id/text_view_recipe_prep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="30min"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

    </RelativeLayout>



