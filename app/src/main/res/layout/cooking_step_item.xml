<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/text_view_cooking_step_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="20"
        android:background="@drawable/cooking_step_item_number_background"
        android:textColor="@color/white"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <ImageView
        android:id="@+id/text_view_cooking_step_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:tint="@color/colorAccent"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_delete_black_24dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/text_view_cooking_step_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/text_view_cooking_step_remove"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Moka"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_view_cooking_step_number" />

</RelativeLayout>